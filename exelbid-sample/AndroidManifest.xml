<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.onnuridmc.sample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name="com.onnuridmc.sample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.onnuridmc.sample.activity.SampleBannerView"
                  android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity android:name="com.onnuridmc.sample.activity.SampleInterstitialView"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity android:name=".activity.SampleNativeMulti"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity android:name=".activity.SampleNative"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity android:name=".activity.SampleNativeVideo"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity android:name=".activity.SampleNativeBanner"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity android:name=".activity.SampleNativeArray"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity android:name=".activity.SampleNativeListView"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity android:name=".activity.SampleNativeRecycler"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity android:name=".activity.SampleNativeRecyclerAuto"
                  android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity android:name=".activity.SampleNativeRecyclerArray"
                  android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity android:name=".activity.SampleDialog">
        </activity>
        <activity android:name="com.onnuridmc.exelbid.common.ExelBidActivity"
                  android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>
        <activity
            android:name="com.onnuridmc.exelbid.lib.vast.VideoPlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity android:name=".activity.SampleMopubBanner"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <meta-data android:name="com.exelbid.appkey"
                   android:value="1db87a14"/>
    </application>
</manifest>